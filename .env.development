# ============================================================
# PneumoDetect - Development Environment Configuration
# ============================================================

FLASK_ENV=development
FLASK_APP=run.py
FLASK_DEBUG=True

# Development secret key (change in production!)
SECRET_KEY=dev-secret-key-for-local-development-only

# ============================================================
# DATABASE
# ============================================================
# Using SQLite for local development
DATABASE_URI=sqlite:///instance/site.db

# ============================================================
# ML & FEATURES
# ============================================================
HF_TOKEN=
MODEL_REPO=dima806/chest_xray_pneumonia_detection
# For demo / local development: skip heavy ML model by default
SKIP_ML=True

# ============================================================
# FILE UPLOADS
# ============================================================
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=52428800

# ============================================================
# LOGGING
# ============================================================
LOG_LEVEL=DEBUG
LOG_FILE=app.log

# ============================================================
# DEVELOPMENT FEATURES
# ============================================================
SEED_DEMO=True  # Create demo users

# ============================================================
# SERVER
# ============================================================
FLASK_HOST=0.0.0.0
PORT=5000
