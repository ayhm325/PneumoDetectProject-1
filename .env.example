# ========================================================
# PneumoDetect - Environment Configuration Template
# Copy this file to .env and fill in the values
# ========================================================

# === Core Configuration ===
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_HOST=0.0.0.0
PORT=5000

# === Security ===
SECRET_KEY=dev-secret-key-change-in-production-with-strong-key

# === Database ===
DATABASE_URI=sqlite:///instance/site.db
# For PostgreSQL: postgresql://user:password@localhost:5432/pneumodetect

# === Upload ===
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=52428800

# === Machine Learning ===
HF_TOKEN=your-huggingface-token-here
MODEL_REPO=dima806/chest_xray_pneumonia_detection

# === CORS ===
CORS_ORIGINS=http://localhost:3000,http://localhost:5000,http://127.0.0.1:5000

# === Email (Optional for notifications) ===
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# === Logging ===
LOG_LEVEL=INFO
LOG_FILE=app.log
